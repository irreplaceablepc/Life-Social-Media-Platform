    <% if(locals.user) {%>
        <div id="home_c">
            <div id="left_home">
                <!-- Profile Photo name -->
                <img src="<%=user.avatar%>" alt="<%=user.name%>" onerror="this.onerror=null; this.src='/img/avatar.png'">
                <h1><%=user.name%></h1>
                <p>@<%=user.username%></p>
                <hr>
                <!-- post following -->
                <div style="display: flex; padding-left: 5%; padding-top: 3%; padding-bottom: 3%; text-align: center;">
                    <div style="padding-left: 1%;">
                        <h2><%= user.totalPost %></h2>
                        <p>Post</p>
                    </div>
                    <div style="padding-left: 13%;">
                        <h2>0</h2>
                        <p>Followers</p>
                    </div>
                    <div style="padding-left: 13%;">
                        <h2>0</h2>
                        <p>Following</p>
                    </div>
                </div>
                <hr>
                <div>
                    <div id="h_icon">
                        <i class="bi bi-house-door"></i>
                        <a href="http://localhost:3000/">
                            <h2>Home</h2>
                        </a>
                    </div>
                    <div id="h_icon">
                        <i class="bi bi-person"></i>
                        <a href="/users/profile/<%=user.id%>">
                            <h2>Profile</h2>         
                        </a>
                    </div>
                    <div id="h_icon">
                        <i class="bi bi-gear"></i>
                        <a href="/users/settings/<%=user.id%>">
                            <h2>Settings</h2>         
                        </a>
                    </div>
                    <div id="h_icon">
                        <i class="bi bi-chat"></i>
                        <a href="/chatroute/chat">
                            <h2>Chat</h2>         
                        </a>
                    </div>
                </div>
                <hr>
                <div id="userdetails">
                    <h4>Friends</h4>
                    <div class="users-list">
                        <% for(user of all_users) {%>
                            <div class="all-users">
                                <img src="<%= user.avatar %>" alt="" style="width: 15%; height: 40px;" onerror="this.onerror=null; this.src='/img/avatar.png'">
                                <p>
                                    <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
                                </p>
                            </div>
                        <%}%>
                    </div>
                </div>
            </div>










































            <div id="right_home">
                <!-- post create show div -->
                <div id="pageContent" class="page-content">
                    <div id="page1">
                        <form action="/posts/create" id="new-post-form" method = "POST">
                            <textarea name="content" id="" cols="30" rows="3" placeholder="type here...." required></textarea>
                            <input type="submit" value="Post">
                        </form>
                            <form action="/posts/pimgs/<%=user.id%>" enctype="multipart/form-data" method="POST">
                                <textarea name="content" id="" cols="30" rows="3" placeholder="type here...."></textarea>
                                <input type="file" name="pimgs" placeholder="Profile picture" required/>
                                <input type="submit"  value="Post">
                            </form>
                    </div>
                </div>
                <!-- feed and post show box -->
                <div class="posts-container" >
                    <ul>
                        <% for(post of posts){ %>
                        
                            <%- include('_post') -%>
                                
                        <%} %>
                    </ul>
                </div>
                <!-- end feeds and post show box -->
            </div>
            
        </div>
        
    <% } else{ %>
        <div id="up_container">
            <div id="up_left">
                <img src="/img/sign_up.png" alt="sign_up logo" style="width: 35vw; height: 80vh; border-radius: 8% 0 0 8%;">
            </div>
            <div id="up_right">
                <h1 style="font-size: 50px;">Create an account</h1>
                <p style="font-size: 20px;">Start sharing moments, one click at a time!</p>
                <form action="/users/create" method="POST" style="padding-top: 5%;">
                <input type="email" name="email" placeholder="Email" required style="margin-bottom: 10px; padding: 15px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 280px); box-sizing: border-box; background-color: rgb(243, 243, 243);">
                <input type="number" name="phone" placeholder="Phone Number" required style="margin-bottom: 10px; padding: 15px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 240px); box-sizing: border-box; margin-left: 25px; background-color: rgb(243, 243, 243);">
                <br>
                <br>
                <input type="text" name="name" placeholder="Full Name" required id="up_form">
                <br>
                <br>
                <input type="text" name="username" placeholder="Username" required id="up_form">
                <br>
                <br>
                <input type="password" name="password" placeholder="Password" required id="up_form">
                <br>
                <br>
                <input type="password" name="confirm_password" placeholder="Confirm Password" required id="up_form">
                <br>
                <br>
                <input type="submit" value="Next" id="up_form" style="background-color: #0d6efd;">
                </form>
                <p>Have an account? <span style="color: blue;"><a href="/users/sign-in">Sign in</a></span></p>
            </div>
        </div>
    <%}%>
