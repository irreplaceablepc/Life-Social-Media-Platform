<div class="center-box">
    <div class="user-info">
        <img src="<%= post.user.avatar %>" alt="Profile Picture" class="profile-picture" onerror="this.onerror=null; this.src='/img/avatar.png'">
        <div class="userp">
            <p class="name" style="font-weight: bold;"><%= post.user.name %></p>
            <p class="username">@<%= post.user.username %></p>
        </div>
    </div>
    <div class="post-content">
        <div class="post-image">
            <img src="<%= post.pimg %>" alt="" class="post-picture">
            <h2><%= post.content %></h2>
        </div>
    </div>
    <div class="actions">
        <% if (locals.user) { %>
            <form action="/likes/toggle?id=<%= post._id %>&type=Post" method="POST">
                <button type="submit" id="like-button" class="like-button">
                    <i class="bi bi-heart outline"></i>
                </button>
            </form>
        <% } else { %>
            <p>Likes</p>
        <% } %>
        <h2><%-post.likes.length-%></h2>
        <button type="submit" id="comment-button" class="comment-button">
            <i class="bi bi-chat"></i>
        </button>
        <h2><%-post.comments.length-%></h2>
    </div>
    <div id="comment-div">
        <div class="post-comments">
            <% if (locals.user){ %>
                <form action="/comments/create" class="new-comment-form" method="POST" >
                
                    <input type="text" class="comment-content" name="content" placeholder="type here to add comment.." required>
                    <input type="hidden" name="post" value="<%= post._id %>">
                    <input type="submit" value="Comment">
                </form>
            <% } %>
        </div>
    </div>
    <div class="post-comments-list">
        <ul id="post-comments-<%= post._id %>">
            <%for(comment of post.comments){%>
                <%- include('_comment') -%>
            <%}%>
        </ul>
    </div>
</div>
